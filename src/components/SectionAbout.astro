---
interface Props {
  id: string;
  texts: {
    title: string;
    sub: string;
    main1: string;
    main2: string;
    listTitle: string;
    li1: string;
    li2: string;
    li3: string;
    li4: string;
    li5: string;
  };
}
const { id, texts } = Astro.props;
---

<section id={id}>
  <h1>{texts.title}</h1>
  <h2>{texts.sub}</h2>
  <p>{texts.main1}</p>
  <p>{texts.main2}</p>
  <p>{texts.listTitle}</p>
  <ul>
    <li class="chemie"><p>{texts.li1}</p></li>
    <li class="logistics"><p>{texts.li2}</p></li>
    <li class="packaging"><p>{texts.li3}</p></li>
    <li class="automotive"><p>{texts.li4}</p></li>
    <li class="batch"><p>{texts.li5}</p></li>
  </ul>
</section>

<style>
  ul {
    margin-top: 30px;
    display: flex;
    flex-direction: row;
    gap: 20px;
  }
  li {
    display: flex;
    width: 250px;
    height: 200px;
    overflow: hidden;
    padding: 10px;
    align-items: center;
    border-radius: 5px;
    border: 2px solid #ff7f00;
    background-size: cover;
    background-position-x: center;
    background-color: rgba(120, 120, 120, 0.3);
    background-blend-mode: lighten;
  }
  li p {
    width: 100%;
    margin: 0 auto;
    font-family: "Poiret", Arial, Helvetica, sans-serif;
    font-weight: 700;
    text-align: center;
    font-size: 1.2em;
    color: rgb(255, 232, 198);
    text-shadow:
      1px 0 #ff7f00,
      -1px 0 #ff7f00,
      0 1px #ff7f00,
      0 -1px #ff7f00,
      1px 1px #ff7f00,
      -1px -1px #ff7f00,
      1px -1px #ff7f00,
      -1px 1px #ff7f00;
  }
  .chemie {
    background-image: url("/images/chemie.webp");
  }
  .logistics {
    background-image: url("/images/logistics.webp");
  }
  .packaging {
    background-image: url("/images/packaging.webp");
  }
  .automotive {
    background-image: url("/images/automotive.webp");
  }
  .batch {
    background-image: url("/images/batch.webp");
  }
</style>
