---
const { size } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 10 10"
  stroke="#eee"
  stroke-width=".6"
  fill="none"
  stroke-linecap="round"
  class="hamburguer"
  height={size}
  width={size}
  style="cursor: pointer;"
>
  <path class="line top" d="M2,3L8,3"></path>
  <path class="line middle" d="M2,5L8,5"></path>
  <path class="line bottom" d="M2,7L8,7"></path>
</svg>

<style>
  .hamburguer .line, .hamburguer {
    transition: transform 0.3s ease, opacity 0.3s ease;
    transform-box: fill-box;
    transform-origin: center;  
  }

  .hamburguer .top {
    path("M2,3L8,3");
  }
  .hamburguer .middle {
    path("M2,5L8,5");
  }
  .hamburguer .bottom {
    path("M2,7L8,7");
  }

  .hamburguer.open .top {
    transform: rotate(45deg) translate(0px, 2.7px);
  }
  .hamburguer.open .middle {
    opacity: 0;
  }
  .hamburguer.open .bottom {
    transform: rotate(-45deg) translate(0px, -2.7px);
  }
  .hamburguer.open{
    transform: translate(7px, 0px);
  }
</style>
