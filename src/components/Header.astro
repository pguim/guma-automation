---
interface Props {
  texts: {
    languageSelector: {
      ca: string;
      es: string;
      en: string;
    };
    menuItems: {
      home: string;
      about: string;
      portfolio: string;
      services: string;
      contact: string;
    };
  };
  currentLanguage: string;
}
const { texts, currentLanguage } = Astro.props;
import LanguageSelector from "./LanguageSelector.astro";
---

<header>
  <img src="/images/main-logo.svg" />
  <ul>
    <li><a href="#home">{texts.menuItems.home}</a></li>
    <li><a href="#about">{texts.menuItems.about}</a></li>
    <li><a href="#portfolio">{texts.menuItems.portfolio}</a></li>
    <li><a href="#services">{texts.menuItems.services}</a></li>
    <li><a href="#contact">{texts.menuItems.contact}</a></li>
  </ul>
  <LanguageSelector
    texts={texts.languageSelector}
    currentLanguage={currentLanguage}
  />
</header>

<style>
  header {
    position: fixed;
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 80px;
    box-shadow: 0px 5px 8px 0px rgba(80, 80, 80, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.21);
    background-color: rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(5px);
    animation-name: headerFix;
    animation-duration: 1ms; /* Firefox requires this to apply the animation */
    animation-direction: alternate;
    animation-timeline: scroll(block nearest);
    animation-range: 0 120px;
    animation-fill-mode: forwards;
  }

  img {
    height: 75%;
    margin-left: 10px;
  }
  ul {
    height: 100%;
    display: flex;
    flex-direction: row;
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    gap: 30px;
  }

  li {
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-items: center;
  }
  a {
    margin: 0 auto;
  }
  a:hover {
    color: #ff7f00;
    transform: scale(1.1);
  }

  @keyframes headerFix {
    from {
      left: 10%;
      right: 10%;
      top: 40px;
      border-radius: 10px;
      border-width: 1px;
    }
    to {
      left: 0;
      right: 0;
      top: 0px;
      border-radius: 0px;
      border-width: 0px;
    }
  }
</style>
