---
interface Props {
  texts: {
    languageSelector: {
      ca: string;
      es: string;
      en: string;
    };
    menuItems: {
      home: string;
      about: string;
      portfolio: string;
      services: string;
      contact: string;
    };
  };
  currentLanguage: string;
}
const { texts, currentLanguage } = Astro.props;
import LanguageSelector from "./LanguageSelector.astro";
---

<header>
  <img src="/images/main-logo.svg" />
  <ul>
    <li><a href="#home">{texts.menuItems.home}</a></li>
    <li><a href="#about">{texts.menuItems.about}</a></li>
    <li><a href="#portfolio">{texts.menuItems.portfolio}</a></li>
    <li><a href="#services">{texts.menuItems.services}</a></li>
    <li><a href="#contact">{texts.menuItems.contact}</a></li>
  </ul>
  <LanguageSelector
    texts={texts.languageSelector}
    currentLanguage={currentLanguage}
  />
</header>

<style>
  header {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 40px;
    width: 80%;
    height: 80px;
    box-shadow: 0px 5px 8px 0px rgba(80, 80, 80, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.21);
    background-color: rgba(255, 255, 255, 0.25);
    border-radius: 10px;
    backdrop-filter: blur(5px);
    animation: 0.7s ease-out 0s 1 fadeIn;
  }

  img {
    height: 75%;
    margin-left: 10px;
  }
  ul {
    height: 100%;
    display: flex;
    flex-direction: row;
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    gap: 30px;
  }

  li {
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-items: center;
  }
  a {
    margin: 0 auto;
  }
  a:hover {
    color: #ff7f00;
    transform: scale(1.1);
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
