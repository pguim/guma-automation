---
interface Props {
  texts: {
    languageSelector: {
      ca: string;
      es: string;
      en: string;
    };
    menuItems: {
      home: string;
      about: string;
      portfolio: string;
      services: string;
      contact: string;
    };
  };
  currentLanguage: string;
}
const { texts, currentLanguage } = Astro.props;
import LanguageSelector from "./LanguageSelector.astro";
---

<header>
  <img src="/images/main-logo.svg" />
  <ul>
    <li><a class="home" href="#home">{texts.menuItems.home}</a></li>
    <li><a class="about" href="#about">{texts.menuItems.about}</a></li>
    <li>
      <a class="portfolio" href="#portfolio">{texts.menuItems.portfolio}</a>
    </li>
    <li><a class="services" href="#services">{texts.menuItems.services}</a></li>
    <li><a class="contact" href="#contact">{texts.menuItems.contact}</a></li>
  </ul>
  <LanguageSelector
    texts={texts.languageSelector}
    currentLanguage={currentLanguage}
  />
</header>

<style>
  img {
    height: 75%;
    margin-left: 10px;
  }
  ul {
    height: 100%;
    display: flex;
    flex-direction: row;
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    gap: 30px;
  }

  li {
    height: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-items: center;
  }
  a {
    margin: 0 auto;
    animation-duration: 1ms;
    animation-direction: alternate;
    animation-timeline: scroll(block nearest);
    animation-range: 0% 100%;
    animation-fill-mode: none;
  }
  a:hover {
    color: #ff7f00;
    transform: scale(1.1);
  }

  .home {
    animation-name: sectionHome;
  }
  .about {
    animation-name: sectionAbout;
  }
  .portfolio {
    animation-name: sectionPortfolio;
  }
  .services {
    animation-name: sectionServices;
  }
  .contact {
    animation-name: sectionContact;
  }

  @keyframes sectionHome {
    0%,
    19% {
      color: #ff7f00;
    }
    20%,
    100% {
      color: white;
    }
  }
  @keyframes sectionAbout {
    0%,
    19% {
      color: white;
    }
    20%,
    39% {
      color: #ff7f00;
    }
    40%,
    100% {
      color: white;
    }
  }
  @keyframes sectionPortfolio {
    0%,
    39% {
      color: white;
    }
    40%,
    59% {
      color: #ff7f00;
    }
    60%,
    100% {
      color: white;
    }
  }
  @keyframes sectionServices {
    0%,
    59% {
      color: white;
    }
    60%,
    79% {
      color: #ff7f00;
    }
    80%,
    100% {
      color: white;
    }
  }
  @keyframes sectionContact {
    0%,
    79% {
      color: white;
    }
    80%,
    100% {
      color: #ff7f00;
    }
  }
</style>
