---
interface Props {
  texts: {
    languageSelector: {
      ca: string;
      es: string;
      en: string;
    };
  };
  currentLanguage: string;
}
const { texts, currentLanguage } = Astro.props;
import LanguageSelector from "./LanguageSelector.astro";
---

<header>
  <LanguageSelector
    texts={texts.languageSelector}
    currentLanguage={currentLanguage}
  />
</header>

<style>
  header {
    position: relative;
    display: flex;
    flex-direction: row;
    margin-top: 40px;
    width: 80%;
    height: 80px;
    box-shadow: 0px 5px 8px 0px rgba(80, 80, 80, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.21);
    background-color: rgba(255, 255, 255, 0.25);
    border-radius: 30px;
    backdrop-filter: blur(5px);
    animation: 0.7s ease-out 0s 1 fadeIn;
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
